    <div class="row" id="dashboardNav">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand">Weigh to Go</a>
            <!--Button for responsive design-->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--This is where the Navbar is encoded-->
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link disabled" href="./dashboard">Dashboard<span
                                class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="./Calorie_counter">Food Diary</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="./Graph">Track Your Progress</a>
                    </li>
                </ul>
